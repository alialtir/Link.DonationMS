@model Application.Dtos.UserDTOs.LoginDto
@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    ViewData["Title"] = SharedResource.GetString("Login");
}
<h2>@SharedResource.GetString("Login")</h2>
<form asp-action="Login" method="post">
    <div class="form-group">
        <label asp-for="UserName"></label>
        <input asp-for="UserName" class="form-control" autocomplete="username" />
        <span asp-validation-for="UserName" class="text-danger"></span>
        @if (ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Count > 0)
        {
            <span class="text-danger">@SharedResource.GetString("InvalidUsernamePassword")</span>
        }
    </div>
    <div class="form-group mt-2">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" type="password" autocomplete="current-password" />
        <span asp-validation-for="Password" class="text-danger"></span>
        @if (ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Count > 0)
        {
            <span class="text-danger">@SharedResource.GetString("InvalidUsernamePassword")</span>
        }
    </div>
    <button type="submit" class="btn btn-primary mt-3 w-100">@SharedResource.GetString("Login")</button>
    <hr />
    <a href="/Auth/login-google" class="btn btn-danger w-100 mt-2">
        <i class="fa fa-google me-1"></i> Login with Google
    </a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}