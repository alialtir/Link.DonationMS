@using Shared.Resources
@model DTOs.CampaignDTOs.UpdateCampaignDto

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>@SharedResource.GetString("EditCampaign")</h2>
    <div class="d-flex align-items-center">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> @SharedResource.GetString("BackToList")
        </a>
    </div>
</div>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" name="page" value="@ViewBag.CurrentPage" />
    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
    
    <div class="mb-3">
        <label asp-for="TitleAr" class="form-label">@SharedResource.GetString("TitleAr")</label>
        <input asp-for="TitleAr" class="form-control arabic-text" placeholder="@SharedResource.GetString("CampaignTitleArPlaceholder")" dir="rtl" />
        <span asp-validation-for="TitleAr" class="text-danger"></span>
    </div>
    
    <div class="mb-3">
        <label asp-for="TitleEn" class="form-label">@SharedResource.GetString("TitleEn")</label>
        <input asp-for="TitleEn" class="form-control" placeholder="@SharedResource.GetString("CampaignTitleEnPlaceholder")" />
        <span asp-validation-for="TitleEn" class="text-danger"></span>
    </div>
    
    <div class="mb-3">
        <label asp-for="DescriptionAr" class="form-label">@SharedResource.GetString("DescriptionAr")</label>
        <textarea asp-for="DescriptionAr" class="form-control arabic-text" rows="3" placeholder="@SharedResource.GetString("CampaignDescriptionArPlaceholder")" dir="rtl"></textarea>
        <span asp-validation-for="DescriptionAr" class="text-danger"></span>
    </div>
    
    <div class="mb-3">
        <label asp-for="DescriptionEn" class="form-label">@SharedResource.GetString("DescriptionEn")</label>
        <textarea asp-for="DescriptionEn" class="form-control" rows="3" placeholder="@SharedResource.GetString("CampaignDescriptionEnPlaceholder")"></textarea>
        <span asp-validation-for="DescriptionEn" class="text-danger"></span>
    </div>
    
    <div class="mb-3">
        <label asp-for="GoalAmount" class="form-label">@SharedResource.GetString("GoalAmount")</label>
        <input asp-for="GoalAmount" class="form-control" type="number" step="0.01" min="0.01" />
        <span asp-validation-for="GoalAmount" class="text-danger"></span>
    </div>
    
    <div class="mb-3">
        <label asp-for="EndDate" class="form-label">@SharedResource.GetString("EndDate")</label>
        <input asp-for="EndDate" class="form-control" type="date" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>
    
    <div class="mb-3">
        <label asp-for="CategoryId" class="form-label">@SharedResource.GetString("Category")</label>
        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories">
            <option value="">@SharedResource.GetString("SelectCategory")</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>
    
    <div class="mb-3">
        <label for="imageFile" class="form-label">@SharedResource.GetString("CampaignImage")</label>
        <input type="file" id="imageFile" name="imageFile" class="form-control" accept="image/*" />
    </div>
    
    <div class="mb-3">
        <label asp-for="Status" class="form-label">@SharedResource.GetString("Status")</label>
        <select asp-for="Status" class="form-control">
            <option value="Active">@SharedResource.GetString("Active")</option>
            <option value="Completed">@SharedResource.GetString("Completed")</option>
            <option value="Expired">@SharedResource.GetString("Expired")</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>
    
    <div class="mb-3">
        <button type="submit" class="btn btn-primary">@SharedResource.GetString("Save")</button>
        <a asp-action="Index" class="btn btn-secondary">@SharedResource.GetString("Cancel")</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 