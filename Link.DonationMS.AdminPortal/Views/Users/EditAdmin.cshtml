@model DTOs.UserDTOs.UserDto

@if (Model.Email == "admin@linkdonation.com")
{
    <div class="alert alert-warning">
        <h4>System Administrator</h4>
        <p>The original system administrator cannot be modified for security reasons.</p>
        <a asp-action="Admins" class="btn btn-secondary">Back to Admins</a>
    </div>
}
else
{
    <form asp-action="EditAdmin" method="post">
        <div class="mb-3">
            <label>Name</label>
            <input asp-for="DisplayName" class="form-control" />
            <span asp-validation-for="DisplayName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label>Email</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-success">Save</button>
        <a asp-action="Admins" class="btn btn-secondary">Cancel</a>
    </form>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 