<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Portal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">@SharedResource.GetString("AdminPortal")</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Users">@SharedResource.GetString("Users")</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Admins">@SharedResource.GetString("Admins")</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Categories" asp-action="Index">@SharedResource.GetString("Categories")</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Campaigns" asp-action="Index">@SharedResource.GetString("Campaigns")</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Donations" asp-action="Index">@SharedResource.GetString("Donations")</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Reports" asp-action="DonorHistory">@SharedResource.GetString("Reports")</a>
                        </li>
                        <li class="nav-item">
                            <form asp-controller="Language" asp-action="SetLanguage" method="post" style="display: inline; margin-right: 10px;">
                                <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                                <button type="submit" name="culture" value="en" class="btn btn-outline-primary btn-sm @(System.Threading.Thread.CurrentThread.CurrentUICulture.Name.StartsWith("en") ? "active" : "")">@SharedResource.GetString("LanguageEnglish")</button>
                                <button type="submit" name="culture" value="ar" class="btn btn-outline-primary btn-sm @(System.Threading.Thread.CurrentThread.CurrentUICulture.Name.StartsWith("ar") ? "active" : "")">@SharedResource.GetString("LanguageArabic")</button>
                            </form>
                        </li>
                    </ul>
                    <form asp-controller="Auth" asp-action="Logout" method="post" class="d-flex ms-2">
                        <button type="submit" class="btn btn-danger">@SharedResource.GetString("Logout")</button>
                    </form>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - @SharedResource.GetString("AdminPortal") - <a asp-area="" asp-controller="Home" asp-action="Privacy">@SharedResource.GetString("Privacy")</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
