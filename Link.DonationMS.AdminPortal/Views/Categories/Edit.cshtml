@model DTOs.CategoryDTOs.UpdateCategoryDto

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>@SharedResource.GetString("EditCategory")</h2>
    <div class="d-flex align-items-center">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> @SharedResource.GetString("BackToList")
        </a>
    </div>
</div>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert" style="display: none;"></div>
    <div class="mb-3">
        <label asp-for="TitleAr" class="form-label">@SharedResource.GetString("TitleAr")</label>
        <input asp-for="TitleAr" class="form-control arabic-text" placeholder="@SharedResource.GetString("TitleArPlaceholder")" dir="rtl" />
        <span asp-validation-for="TitleAr" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="TitleEn" class="form-label">@SharedResource.GetString("TitleEn")</label>
        <input asp-for="TitleEn" class="form-control" placeholder="@SharedResource.GetString("TitleEnPlaceholder")" />
        <span asp-validation-for="TitleEn" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="DescriptionAr" class="form-label">@SharedResource.GetString("DescriptionAr")</label>
        <textarea asp-for="DescriptionAr" class="form-control arabic-text" rows="3" placeholder="@SharedResource.GetString("DescriptionArPlaceholder")" dir="rtl"></textarea>
        <span asp-validation-for="DescriptionAr" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="DescriptionEn" class="form-label">@SharedResource.GetString("DescriptionEn")</label>
        <textarea asp-for="DescriptionEn" class="form-control" rows="3" placeholder="@SharedResource.GetString("DescriptionEnPlaceholder")"></textarea>
        <span asp-validation-for="DescriptionEn" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-primary">@SharedResource.GetString("Save")</button>
        <a asp-action="Index" class="btn btn-secondary">@SharedResource.GetString("Cancel")</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 